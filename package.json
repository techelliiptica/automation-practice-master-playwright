{
  "name": "automation-practice-playwright",
  "version": "1.0.0",
  "description": "Playwright automation framework for automation practice app",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register",
    "test:headed": "HEADLESS=false cucumber-js --require-module ts-node/register",
    "test:debug": "cucumber-js --require-module ts-node/register --format progress-bar",
    "test:report": "ts-node generate-report.ts",
    "test:form-submission": "cucumber-js features/form-submission.feature --require-module ts-node/register",
    "test:button-interactions": "cucumber-js features/button-interactions.feature --require-module ts-node/register",
    "test:dropdown-select": "cucumber-js features/dropdown-select.feature --require-module ts-node/register",
    "test:checkbox-radio": "cucumber-js features/checkbox-radio.feature --require-module ts-node/register",
    "test:dynamic-content": "cucumber-js features/dynamic-content.feature --require-module ts-node/register",
    "test:alerts-modals": "cucumber-js features/alerts-modals.feature --require-module ts-node/register",
    "test:table-data": "cucumber-js features/table-data.feature --require-module ts-node/register",
    "test:file-upload": "cucumber-js features/file-upload.feature --require-module ts-node/register",
    "test:hover-tooltip": "cucumber-js features/hover-tooltip.feature --require-module ts-node/register",
    "test:drag-drop": "cucumber-js features/drag-drop.feature --require-module ts-node/register",
    "test:iframe": "cucumber-js features/iframe.feature --require-module ts-node/register",
    "test:date-picker": "cucumber-js features/date-picker.feature --require-module ts-node/register",
    "test:link-interactions": "cucumber-js features/link-interactions.feature --require-module ts-node/register",
    "test:image-interactions": "cucumber-js features/image-interactions.feature --require-module ts-node/register",
    "test:super-assignment": "cucumber-js features/super-assignment.feature --require-module ts-node/register",
    "test:home": "cucumber-js features/home.feature --require-module ts-node/register"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "cucumber-html-reporter": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
